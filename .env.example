# Application Settings
APP_NAME=Laravel                     # The name of your application
APP_ENV=local                        # Environment: local, staging, production
APP_KEY=base64:your_application_key  # Your application encryption key
APP_DEBUG=true                       # Enable/disable debug mode
APP_TIMEZONE=UTC                     # Default application timezone
APP_URL=http://localhost             # Application base URL

APP_LOCALE=en                        # Default language for the app
APP_FALLBACK_LOCALE=en               # Fallback language if APP_LOCALE is unavailable
APP_FAKER_LOCALE=en_US               # Locale for Faker library (used for seeding/testing)

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file          # Driver to manage maintenance mode
# APP_MAINTENANCE_STORE=database      # Uncomment if using database for maintenance

# PHP Server
PHP_CLI_SERVER_WORKERS=4             # Number of workers for PHP's built-in server

# Encryption Settings
BCRYPT_ROUNDS=12                     # Bcrypt hash rounds for passwords

# Logging
LOG_CHANNEL=stack                    # Log channel: stack, single, daily, etc.
LOG_STACK=single                      # Log stack driver
LOG_DEPRECATIONS_CHANNEL=null        # Log deprecations
LOG_LEVEL=debug                      # Log level: debug, info, error, etc.

# Database Configuration
DB_CONNECTION=mysql                  # Database connection type
DB_HOST=127.0.0.1                    # Database host
DB_PORT=3306                         # Database port
DB_DATABASE=your_database_name       # Database name
DB_USERNAME=your_username            # Database username
DB_PASSWORD=your_password            # Database password

# Session Configuration
SESSION_DRIVER=database              # Session storage driver
SESSION_LIFETIME=120                 # Session lifetime (in minutes)
SESSION_ENCRYPT=false                # Enable session encryption
SESSION_PATH=/                       # Session path
SESSION_DOMAIN=null                  # Session domain (if applicable)

# Caching
CACHE_STORE=database                 # Cache storage driver
CACHE_PREFIX=your_cache_prefix       # Cache key prefix

# Queue
QUEUE_CONNECTION=database            # Queue connection driver

# Redis Configuration
REDIS_CLIENT=phpredis                # Redis client: phpredis, predis, etc.
REDIS_HOST=127.0.0.1                 # Redis server host
REDIS_PASSWORD=null                  # Redis server password
REDIS_PORT=6379                      # Redis server port

# Mail Configuration
MAIL_MAILER=smtp                     # Mail driver: smtp, log, etc.
MAIL_SCHEME=null                     # Mail scheme (optional)
MAIL_HOST=127.0.0.1                  # Mail server host
MAIL_PORT=2525                       # Mail server port
MAIL_USERNAME=null                   # Mail server username
MAIL_PASSWORD=null                   # Mail server password
MAIL_FROM_ADDRESS="hello@example.com" # Default "From" email address
MAIL_FROM_NAME="${APP_NAME}"         # Default "From" name

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_key_id            # AWS access key ID
AWS_SECRET_ACCESS_KEY=your_aws_secret_key    # AWS secret access key
AWS_DEFAULT_REGION=us-east-1                 # AWS region
AWS_BUCKET=your_s3_bucket_name               # AWS S3 bucket name
AWS_USE_PATH_STYLE_ENDPOINT=false           # Enable path-style S3 endpoints

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"          # Application name for Vite
